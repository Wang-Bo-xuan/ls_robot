<launch>
  <group ns="robot1">
    <include file="$(find ls_robot_config)/launchs/includes/ls_robot_base.launch.xml" >
      <arg name="init_pose" value="-x 0 -y 0 -z 0" />
      <arg name="robot_name"  value="robot1" />
    </include>
  </group>

  <group ns="robot2">
    <include file="$(find ls_robot_config)/launchs/includes/ls_robot_base.launch.xml" >
      <arg name="init_pose" value="-x 1 -y 0 -z 0" />
      <arg name="robot_name"  value="robot2" />
    </include>
  </group>
</launch>
